<Window x:Class="GirdToAlignControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GirdToAlignControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top">
        <Canvas Width="350" Height="350" local:AttachedPropertiesForFrameworkElement.ShowGrid="False" local:AttachedPropertiesForFrameworkElement.GridSize="10,10">
            <Rectangle Width="100" Height="10" Fill="Red" Canvas.Left="10" Canvas.Top="10"></Rectangle>
            <Button Width="100" Height="40" Canvas.Left="10" Canvas.Top="30"></Button>
        </Canvas>
    </Viewbox>



</Window>
